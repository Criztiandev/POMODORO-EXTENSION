{
  "name": "your-pomodoro",
  "displayName": "Your Pomodoro",
  "description": "A simple and effective Pomodoro timer for VS Code to boost your productivity",
  "version": "0.0.1",
  "publisher": "criztiandev",
  "icon": "src/assets/logo/your-pomodoro.logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/Criztiandev/Your-Pomodoro"
  },
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "pomodoro.start",
        "title": "Start Pomodoro",
        "category": "Pomodoro"
      },
      {
        "command": "pomodoro.pause",
        "title": "Pause Timer",
        "category": "Pomodoro"
      },
      {
        "command": "pomodoro.reset",
        "title": "Reset Timer",
        "category": "Pomodoro"
      },
      {
        "command": "pomodoro.skip",
        "title": "Skip Current Session",
        "category": "Pomodoro"
      },
      {
        "command": "pomodoro.openPanel",
        "title": "Open Pomodoro Panel",
        "category": "Pomodoro"
      },
      {
        "command": "pomodoro.toggleTimer",
        "title": "Toggle Timer",
        "category": "Pomodoro"
      },
      {
        "command": "pomodoro.updateSettings",
        "title": "Update Settings",
        "category": "Pomodoro"
      },
      {
        "command": "pomodoro.isTimerActive",
        "title": "Check Timer Status",
        "category": "Pomodoro"
      },
      {
        "command": "pomodoro.switchSession",
        "title": "Switch Session Type",
        "category": "Pomodoro"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "pomodoro.start"
        },
        {
          "command": "pomodoro.pause"
        },
        {
          "command": "pomodoro.reset"
        },
        {
          "command": "pomodoro.skip"
        },
        {
          "command": "pomodoro.openPanel"
        },
        {
          "command": "pomodoro.toggleTimer"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Pomodoro Timer Settings",
      "properties": {
        "pomodoroTimer.workDuration": {
          "type": "number",
          "default": 25,
          "minimum": 1,
          "maximum": 60,
          "description": "Duration of work sessions in minutes"
        },
        "pomodoroTimer.shortBreakDuration": {
          "type": "number",
          "default": 5,
          "minimum": 1,
          "maximum": 30,
          "description": "Duration of short break sessions in minutes"
        },
        "pomodoroTimer.longBreakDuration": {
          "type": "number",
          "default": 15,
          "minimum": 1,
          "maximum": 60,
          "description": "Duration of long break sessions in minutes"
        },
        "pomodoroTimer.hourFormat": {
          "type": "boolean",
          "default": true,
          "description": "Use 24-hour format for time display"
        },
        "pomodoroTimer.notificationEnabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable notifications when sessions complete"
        },
        "pomodoroTimer.panelPosition": {
          "type": "string",
          "enum": ["left", "right"],
          "default": "left",
          "description": "Position of the timer panel in the status bar"
        },
        "pomodoroTimer.notificationType": {
          "type": "string",
          "enum": ["notification", "modal"],
          "default": "notification",
          "description": "Type of notification to show when sessions complete"
        },
        "pomodoroTimer.pomodoroTodos": {
          "type": "object",
          "default": {
            "tasks": [],
            "currentTaskId": null
          },
          "description": "Pomodoro todo list state and tasks",
          "properties": {
            "tasks": {
              "type": "array",
              "description": "List of todo tasks",
              "items": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "string",
                    "description": "Unique task identifier"
                  },
                  "title": {
                    "type": "string",
                    "description": "Task title"
                  },
                  "description": {
                    "type": "string",
                    "description": "Task description"
                  },
                  "estimatedPomodoros": {
                    "type": "number",
                    "description": "Estimated pomodoros needed"
                  },
                  "estimatedMinutes": {
                    "type": "number", 
                    "description": "Estimated minutes needed"
                  },
                  "completed": {
                    "type": "boolean",
                    "description": "Whether task is completed"
                  },
                  "createdAt": {
                    "type": "string",
                    "description": "Task creation timestamp (ISO string)"
                  },
                  "completedAt": {
                    "type": "string",
                    "description": "Task completion timestamp (ISO string)"
                  },
                  "priority": {
                    "type": "string",
                    "enum": ["low", "medium", "high"],
                    "description": "Task priority level"
                  }
                }
              }
            },
            "currentTaskId": {
              "type": ["string", "null"],
              "description": "ID of currently selected task"
            }
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src --fix",
    "format": "prettier --write .",
    "prepare": "husky",
    "test": "vscode-test"
  },
  "lint-staged": {
    "*.{ts,js,json,md}": [
      "prettier --write"
    ],
    "*.{ts,js}": [
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.103.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.8",
    "eslint": "^9.32.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@types/ejs": "^3.1.5",
    "ejs": "^3.1.10"
  }
}
